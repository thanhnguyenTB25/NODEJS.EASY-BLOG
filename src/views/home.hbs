<div class="mt-4">
    <div class="row">
        {{#each myBlogs}}
        <div class="col-sm-6 col-lg-4">
            <div class="card mt-4">
                <a href="/blogs/{{this.slug}}"><img class="card-img-top" src="{{this.image}}" alt="{{this.name}}"></a>
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <a href="/blogs/{{this.slug}}" class="btn btn-primary">blogs detail</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>